{
  "env": {
    "node": true,
    "mocha": true,
    "protractor": true,
    "phantomjs": true
  },
  "globals": {
    "sinon": true,
    "expect": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-param-reassign": 0,
    "comma-dangle": ["error", {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "never"
    }]
  },
  "extends": "airbnb-base"
}
